{
  "use": [
    "postcss-import",
    "postcss-url",
    "postcss-cssnext",
    "cssnano",
    "postcss-reporter"
  ],

  "map": {
    "inline": true
  },

  "cssnano": {
    "autoprefixer": false,
    "safe": true
  },

  "local-plugins": true,
  "output": "example/css/style.css",
  "input": "./style.css",
  "watch": false,

  "postcss-import": {
    "path": [
      "vendor/normalize.css/",
      "vendor/animate.css/",
      "vendor/fontawesome/css/",
      "vendor/material-design-icons-iconfont/dist/"
    ]
  },

  "autoprefixer": {
    "browsers": "last 2 versions"
  }
}
