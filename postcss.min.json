{
  "use": [
    "postcss-import",
    "postcss-url",
    "postcss-cssnext",
    "cssnano",
    "postcss-reporter"
  ],

  "map": {
    "inline": true
  },

  "cssnano": {
    "autoprefixer": false,
    "safe": true
  },

  "local-plugins": true,
  "output": "example/css/style.css",
  "input": "./style.css",
  "watch": false,
  "autoprefixer": {
    "browsers": "last 2 versions"
  }
}
